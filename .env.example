# .env.example
# Шаблон переменных окружения для ITBase
# Скопируйте в .env и заполните своими значениями
# НЕ добавляйте .env в Git!

# --- База данных (PostgreSQL) ---
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_DB=itbase

# --- Кэширование (Redis) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-me
REDIS_DB=0

# --- Безопасность ---
# Сгенерируйте ключ: openssl rand -hex 32
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Приложение ---
APP_PORT=8002