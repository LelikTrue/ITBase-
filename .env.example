# ===================================================================
# ITBase: Шаблон переменных окружения
# Скопируйте этот файл в .env и заполните своими значениями.
# Файл .env НЕ должен попадать в Git.
# ===================================================================

# --- Основные настройки ---
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=True

# --- Безопасность ---
# Сгенерируйте свой ключ командой: openssl rand -hex 32
SECRET_KEY=your_super_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- База данных (PostgreSQL) ---
# Используем стандарт POSTGRES_* для совместимости с Docker, приложением и скриптами
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=itbase
POSTGRES_HOST=db # Имя сервиса в docker-compose.yml
POSTGRES_PORT=5432

# --- Кэширование (Redis) ---
REDIS_HOST=redis # Имя сервиса в docker-compose.yml
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# --- pgAdmin (веб-интерфейс для БД) ---
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# --- Настройки приложения ---
APP_PORT=8001
APP_DOMAIN=localhost:8001
API_DOCS_ENABLED=True

# --- CORS (для подключения фронтенда в будущем) ---
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- Email (заглушки для разработки) ---
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=